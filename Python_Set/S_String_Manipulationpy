# For the string below, generate the code to find if it is pallindrome or not
str_1 = "malayalam"
str_2 = "john_doe"

# Modify the function to output True/False based on the string provided

def reverse(s):
    return s[::-1]

def is_pallindrome(val):
    Flag = False
    val_1 = reverse(val)
    if val_1 == val:
        Flag = True
    return(Flag)

print(is_pallindrome(str_1))
print(is_pallindrome(str_2))